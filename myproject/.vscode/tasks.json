{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "group": "build",
            "isBackground": false,
            "problemMatcher": []
        },
        {
            "label": "Start Plugin",
            "type": "shell",
            "command": "node",
            "args": [
                "index.js"
            ],
            "group": "build",
            "isBackground": false,
            "problemMatcher": []
        },
        {
            "label": "Validate Plugin",
            "type": "shell",
            "command": "node",
            "args": [
                "-c",
                "import('./index.js').then(() => console.log('Plugin validation successful')).catch(e => { console.error('Plugin validation failed:', e); process.exit(1) })"
            ],
            "group": "test",
            "isBackground": false,
            "problemMatcher": []
        }
    ]
}